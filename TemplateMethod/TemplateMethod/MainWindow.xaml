<Window x:Class="TemplateMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateMethod"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <ComboBox x:Name="cbType" HorizontalAlignment="Left" Height="25" Margin="53,39,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="cbType_SelectionChanged">
            <ComboBoxItem Content="KIS"/>
            <ComboBoxItem Content="TPay"/>
        </ComboBox>
        <TextBox x:Name="tbResult" HorizontalAlignment="Left" Height="250" Margin="53,128,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="btnPayment" Content="결제" HorizontalAlignment="Left" Height="38" Margin="53,78,0,0" VerticalAlignment="Top" Width="68" Click="btnPayment_Click"/>
        <Button x:Name="btnPayment_Cancel" Content="결제취소" HorizontalAlignment="Left" Height="38" Margin="133,78,0,0" VerticalAlignment="Top" Width="68" Click="btnPayment_Cancel_Click"/>
        <Button x:Name="btnCashReceipt" Content="현금영수증" HorizontalAlignment="Left" Height="38" Margin="212,78,0,0" VerticalAlignment="Top" Width="68" Click="btnCashReceipt_Click"/>

    </Grid>
</Window>
